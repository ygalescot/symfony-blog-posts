<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <ul class="flex justify-center gap-4">
                <li>
                    <a href="{{ path('homepage') }}" class="text-blue-500 hover:underline">Home</a>
                </li>
                <li>
                    <a href="{{ path('form_page') }}" class="text-blue-500 hover:underline">Form</a>
                </li>
                <li>
                    <a href="{{ path('cms_content_page') }}" class="text-blue-500 hover:underline">CMS Content</a>
                </li>
            </ul>
        </header>
        {% block body %}{% endblock %}
    </body>
</html>
